<launch>

    <arg name="uav_id" default="2"/>
    <arg name="fps" default="10"/>
    <arg name="height" default="448"/>
    <arg name="width" default="608"/>
    <arg name="source" default="/dji_osdk_ros/main_camera_images"/> <!-- 0 para camara , 1 para video-->


 
    <group ns="$(arg uav_id)">       
        <!-- Launch video_streamer node for uav id=3 -->
        <node pkg="simple_vs" type="video_resize" name="video_resize" output="screen" >
            <param name="fps" type="int" value="$(arg fps)"/>
            <param name="frame_height" type="int" value="$(arg height)"/>
            <param name="frame_width" type="int" value="$(arg width)"/>
            <param name="ns" type="str" value="$(arg uav_id)"/>
            <param name="source" type="str" value="$(arg source)"/>
        </node>
    </group>
</launch>
